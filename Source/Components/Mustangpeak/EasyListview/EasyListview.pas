  StreamHelper.WriteInteger(Stream, EASYLISTVIEW_STREAM_VERSION);
  // Store the number of items we are storing
  StreamHelper.WriteInteger(Stream, FList.Count);
  for i := 0 to FList.Count - 1 do
  begin

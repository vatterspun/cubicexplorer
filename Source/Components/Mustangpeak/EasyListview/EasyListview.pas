    end
  end else
  if (ehsDragPending in State) and DragManager.Enabled then
  begin
    if DragDetectPlus(OwnerListview.Handle, SmallPointToPoint(Msg.Pos)) then
    begin
      Exclude(FState, ehsDragPending);

  if Enabled and MultiSelect then
  begin
    GroupSelectBeginUpdate;
    IncMultiChangeCount;
    try
      if ClearFirst then
        ClearAll;
      Temp := OwnerListview.Groups.FirstItemInRect(ViewportSelRect);
      while Assigned(Temp) do
      begin
        Temp.Selected := True;
        Temp := OwnerListview.Groups.NextItemInRect(Temp, ViewportSelRect);
